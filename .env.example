# RV Repair Copilot Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model configuration (optional - defaults shown)
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# PINECONE VECTOR DATABASE CONFIGURATION
# =============================================================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Environment (e.g., us-east1-gcp, us-west1-gcp, eu-west1-gcp)
PINECONE_ENV=your_pinecone_environment_here

# Index name (will be created if it doesn't exist)
PINECONE_INDEX_NAME=rv-repair-manuals

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origins (comma-separated for multiple)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for PDF uploads (in bytes)
MAX_FILE_SIZE=52428800

# Allowed file types
ALLOWED_FILE_TYPES=application/pdf

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable detailed logging
VERBOSE_LOGGING=false

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
# For production deployments, set these:
# NODE_ENV=production
# LOG_LEVEL=warn
# DEBUG=false
# VERBOSE_LOGGING=false

# =============================================================================
# OPTIONAL: MONITORING & ANALYTICS
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
# GA_TRACKING_ID=your_ga_id_here

# =============================================================================
# OPTIONAL: CACHING
# =============================================================================
# Redis configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# OPTIONAL: DATABASE (if using additional databases)
# =============================================================================
# PostgreSQL (if storing additional metadata)
# DATABASE_URL=postgresql://username:password@localhost:5432/rv_repair_copilot

# MongoDB (alternative to PostgreSQL)
# MONGODB_URI=mongodb://localhost:27017/rv_repair_copilot

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different API keys for development and production
# 4. Monitor your API usage to avoid unexpected charges
# 5. Set appropriate rate limits for production use